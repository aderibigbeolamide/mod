modules = ["nodejs-20"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glib", "nss", "nspr", "atk", "cups", "libdrm", "libxkbcommon", "xorg.libxcb", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr", "pango", "cairo", "alsa-lib", "at-spi2-atk", "at-spi2-core", "chromium", "freetype", "harfbuzz", "dbus", "xorg.libXi", "xorg.libXcursor", "xorg.libXtst", "xorg.libXScrnSaver", "gtk3", "mesa"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 34389
externalPort = 3001

[[ports]]
localPort = 34641
externalPort = 3003

[deployment]
deploymentTarget = "vm"
build = ["npm", "run", "build"]
run = ["npm", "start"]
